post_install() {
  instruct
  echo "and enable the extension with gnome-tweak-tool."
}

post_upgrade() {
  instruct
  echo "for the changes to have an effect."
}

post_remove() {
  glib-compile-schemas usr/share/glib-2.0/schemas/
}

instruct() {
  post_remove
  echo "Don't forget to restart GNOME Shell ([Alt]+[F2], r)"
}

